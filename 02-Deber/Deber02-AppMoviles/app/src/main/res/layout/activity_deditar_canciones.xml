<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_deditar_canciones">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_nombre_cancion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre de la CanciÃ³n"
        app:layout_constraintBottom_toTopOf="@+id/input_edad_cancion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintWidth_percent="0.9" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_edad_cancion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Edad"
        app:layout_constraintBottom_toTopOf="@+id/input_altura_cancion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_nombre_cancion"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintWidth_percent="0.9" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/input_altura_cancion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Altura"
        app:layout_constraintBottom_toTopOf="@+id/btn_save_mat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_edad_cancion"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintWidth_percent="0.9" />

    <Button
        android:id="@+id/btn_save_mat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_altura_cancion"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
